{
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Namespace": "default",
      "Type": "kube"
    }
  },
  "Routes": [
    {
      "DownstreamPathTemplate": "/",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/",
      "ServiceName": "erp-angular-webapp",
      "UpstreamHttpMethod": [ "Get" ]
    },
    {
      "DownstreamPathTemplate": "/",
      "DownstreamScheme": "http",
      "UpstreamPathTemplate": "/idp",
      "ServiceName": "identityserver",
      "UpstreamHttpMethod": [ "Get" ]
    }

  ]
}